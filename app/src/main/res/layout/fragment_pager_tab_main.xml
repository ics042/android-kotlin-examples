<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:text="We Chat"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpFragmentPagerTabMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/linear_top_border">
        <LinearLayout
            android:id="@+id/llBottom1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivWeixin"
                android:layout_width="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/tab_weixin_pressed"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/tvWeixin"
                android:layout_width="wrap_content"
                android:text="We Chat"
                android:contentDescription="#00ff00"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llBottom2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivContact"
                android:layout_width="wrap_content"
                android:clickable="false"
                android:background="#00000000"
                android:src="@drawable/tab_contact_normal"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:text="Contact"
                android:contentDescription="#cccccc"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llBottom3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivFriend"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:background="#00000000"
                android:src="@drawable/tab_friend_normal"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/tvFriend"
                android:layout_width="wrap_content"
                android:text="Friend"
                android:contentDescription="#cccccc"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llBottom4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivSetting"
                android:layout_width="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/tab_settings_normal"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/tvSetting"
                android:layout_width="wrap_content"
                android:text="Me"
                android:contentDescription="#cccccc"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>